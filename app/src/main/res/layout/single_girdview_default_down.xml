<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:staggered="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg"><!---->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:text="@string/chanye" />

        <ImageView
            android:id="@+id/imageView_delete1"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:layout_alignBottom="@+id/textView45"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:srcCompat="@drawable/delete" />
    </RelativeLayout>
    <com.mango.leo.zsproject.industrialservice.createrequirements.util.StaggeredGridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:itemMargin="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView45"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="3dp"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:numColumns="3"
        android:verticalSpacing="5dp" />
    </LinearLayout>

