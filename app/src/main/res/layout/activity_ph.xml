<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray"
    android:orientation="vertical"
    tools:context="com.mango.leo.zsproject.personalcenter.show.AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/common_nav_icon_back" />

        <TextView
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_ph"
            android:layout_centerHorizontal="true"
            android:text="电话客服"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/imageView85"
            android:layout_toRightOf="@+id/imageView85"
            android:text="客服电话"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/textView102"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView90"
            android:layout_alignStart="@+id/textView90"
            android:layout_below="@+id/textView90"
            android:textColor="@color/blue"
            android:textSize="@dimen/textSize"
            android:layout_marginTop="13dp"
            android:text="181 2360 3216（齐小姐）" />

        <TextView
            android:id="@+id/textView103"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView102"
            android:layout_alignStart="@+id/textView102"
            android:layout_below="@+id/textView102"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="13dp"
            android:textSize="@dimen/commom_tv_size_12"
            android:text="添加微信，服务时间：周一至周五9:00-22:00，周末9:00-18:00" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/imageView86"
            android:layout_toRightOf="@+id/imageView86"
            android:text="客服电话"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <TextView
            android:textSize="@dimen/textSize"
            android:textColor="@color/blue"
            android:id="@+id/textView104"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView91"
            android:layout_alignStart="@+id/textView91"
            android:layout_below="@+id/textView91"
            android:layout_marginTop="13dp"
            android:text="181 2360 3216（齐小姐）" />

        <TextView
            android:id="@+id/textView106"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView104"
            android:layout_alignStart="@+id/textView104"
            android:layout_below="@+id/textView104"
            android:layout_marginBottom="17dp"
            android:textSize="@dimen/commom_tv_size_12"
            android:layout_marginTop="13dp"
            android:text="添加微信，服务时间：周一至周五9:00-22:00，周末9:00-18:00" />

    </RelativeLayout>

</LinearLayout>
