<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray"
    android:orientation="vertical"
    tools:context="com.mango.leo.zsproject.industrialservice.createrequirements.carditems.CardFirstItemActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp">
    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目描述"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/textView_delete1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:textSize="@dimen/textSize"
            android:textColor="@color/red"
            android:text="@string/clear" />

        <ImageView
            android:id="@+id/imageView1_back"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView_delete1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/common_nav_icon_back" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/constraintLayout"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView60"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/xingxing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="项目名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <EditText
                    android:background="@null"
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ellipsize="end"
                    android:hint="请输入招商引资项目名称"
                    android:maxLines="1"
                    android:textColor="@color/secondblack"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/sencond_textSize" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:text="组织单位名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <EditText
                    android:background="@null"
                    android:id="@+id/item_danweiName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ellipsize="end"
                    android:hint="请输入组织单位名称"
                    android:maxLines="1"
                    android:textColor="@color/secondblack"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/sencond_textSize" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView61"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/xingxing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="项目总投资："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <EditText
                    android:background="@null"
                    android:id="@+id/item_money"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:hint="请输入总投资金额"
                    android:maxLines="1"
                    android:textColor="@color/secondblack"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/sencond_textSize" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageVi"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/xingxing" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="项目概况："
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize"
                        android:textStyle="bold" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
                <LinearLayout
                    android:background="@color/white"
                    android:padding="11dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/item_content"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:background="@null"
                        android:hint="请输入招商引资项目概况"
                        android:lineSpacingExtra="8dp"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/secondblack"
                        android:textColorHint="@color/hint"
                        android:textSize="@dimen/sencond_textSize" />
                    <TextView
                        android:id="@+id/textView_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_marginRight="8dp"
                        android:text="200字"
                        android:textSize="@dimen/small_textSize"  />
                </LinearLayout>



            </LinearLayout>
