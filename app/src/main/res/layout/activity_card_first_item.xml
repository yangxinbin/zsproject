<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mango.leo.zsproject.industrialservice.createrequirements.carditems.CardFirstItemActivity">

    <ImageView
        android:id="@+id/imageView1_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_nav_icon_back"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="项目描述"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView1_back"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="167dp" />

    <TextView
        android:id="@+id/textView1_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/save"
        android:textColor="@color/grayBlack"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="283dp" />

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:contentPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1_save"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="项目名称："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/editor_shape"
                    android:ellipsize="end"
                    android:hint="请输入招商引资项目名称"
                    android:maxLines="1"
                    android:textColor="@color/secondblack"
                    android:textColorHint="@color/grayBlack"
                    android:textSize="@dimen/sencond_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="项目概况："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <com.mango.leo.zsproject.viewutil.LinedEditText
                    android:id="@+id/item_content"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/editor_shape"
                    android:gravity="top"
                    android:hint="请输入招商引资项目概况"
                    android:lineSpacingExtra="8dp"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/secondblack"
                    android:textColorHint="@color/secondblack"
                    android:textSize="@dimen/sencond_textSize" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="@drawable/editor_shape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_iv_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/msg_icon_feedback" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
