<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mango.leo.zsproject.login.PhoneLoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/common_gray"
        android:gravity="center_vertical"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/imageView_pwd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/common_nav_icon_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_phoneNum"
        android:layout_alignStart="@+id/editText_phoneNum"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="31dp"
        android:text="密码登录"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <EditText
        android:background="@null"
        android:id="@+id/editText_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="请输入手机号吗"
        android:inputType="phone" />
    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/ig1"
        android:layout_below="@+id/editText_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/secondblack"
        />
    <LinearLayout
        android:id="@+id/te"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_phoneNum"
        android:layout_alignStart="@+id/editText_phoneNum"
        android:layout_below="@+id/editText_phoneNum"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/editText_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_weight="1"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPersonName" />
        <ToggleButton
            android:id="@+id/togglePwd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/toggle_pwd_selector"
            android:padding="10dp"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/ig"
        android:layout_below="@+id/te"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/secondblack"
        />
    <Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:background="@drawable/rec_red_background"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ig"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="@dimen/title"
        android:textColor="@color/white"
        android:text="@string/login" />

    <TextView
        android:id="@+id/textView_phnoelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_login"
        android:layout_alignRight="@+id/button_login"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="13dp"
        android:text="验证码登录"
        android:textColor="@color/secondblack"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/textView_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:layout_alignTop="@+id/textView_phnoelogin"
        android:textColor="@color/secondblack"
        android:textSize="@dimen/textSize"
        android:text="忘记密码？" />


</RelativeLayout>
